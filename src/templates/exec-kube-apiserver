/usr/local/bin/kube-apiserver \
  --admission-control=Initializers,NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \
  --advertise-address=${privateIp} \
  --allow-privileged=true \
  --apiserver-count=1 \
  --audit-log-maxage=30 \
  --audit-log-maxbackup=3 \
  --audit-log-maxsize=100 \
  --audit-log-path=/var/log/audit.log \
  --authorization-mode=Node,RBAC \
  --bind-address=0.0.0.0 \
  --client-ca-file=${basePath}/cluster-ca-cert.pem \
  --etcd-cafile=${basePath}/etcd-ca-cert.pem \
  --etcd-certfile=${basePath}/apiserver-to-etcd-cert.pem \
  --etcd-keyfile=${basePath}/apiserver-to-etcd-private-key.pem \
  --etcd-servers=${etcdHosts} \
  --event-ttl=1h \
  --insecure-bind-address=127.0.0.1 \
  --kubelet-preferred-address-types=InternalIP,Hostname,ExternalIP \
  --kubelet-certificate-authority=${basePath}/cluster-ca-cert.pem \
  --kubelet-client-certificate=${basePath}/apiserver-to-kubelet-cert.pem \
  --kubelet-client-key=${basePath}/apiserver-to-kubelet-private-key.pem \
  --kubelet-https=true \
  --runtime-config=api/all \
  --service-account-key-file=${basePath}/service-account-public-key.pem \
  --service-cluster-ip-range=${serviceCidr} \
  --service-node-port-range=30000-32767 \
  --tls-ca-file=${basePath}/cluster-ca-cert.pem \
  --tls-cert-file=${basePath}/client-to-apiserver-cert.pem \
  --tls-private-key-file=${basePath}/client-to-apiserver-private-key.pem \
  --v=2
