apiVersion: v1
kind: Config
current-context: default
clusters:
  - cluster:
      certificate-authority: ${configPath}/cluster-ca.crt
      server: https://${apiserver}:6443
    name: ${clusterName}
contexts:
  - context:
      cluster: ${clusterName}
      user: ${user}
    name: default
users:
  - name: ${user}
    user:
      client-certificate: ${configPath}/${name}.crt
      client-key: ${configPath}/${name}.key
