apiVersion: v1
kind: Config
current-context: default
clusters:
  - cluster:
      certificate-authority: ${basePath}/cluster-ca-cert.pem
      server: https://${apiserver}:6443
    name: ${clusterName}
contexts:
  - context:
      cluster: ${clusterName}
      user: ${user}
    name: default
users:
  - name: ${user}
    user:
      client-certificate: ${basePath}/${name}-cert.pem
      client-key: ${basePath}/${name}-private-key.pem
