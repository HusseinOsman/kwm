/usr/local/bin/kube-apiserver \\
  --admission-control=Initializers,NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \\
  --advertise-address=${privateIp} \\
  --service-cluster-ip-range=${serviceCidr} \\
  --allow-privileged=true \\
  --anonymous-auth=false \\
  --authorization-mode=Node,RBAC \\
  --apiserver-count=${count} \\
  --bind-address=0.0.0.0 \\
  --experimental-encryption-provider-config=${configPath}/encryption-config.yml \\
  --client-ca-file=${configPath}/cluster-ca-cert.pem \\
  --etcd-cafile=${configPath}/etcd-ca-cert.pem \\
  --etcd-certfile=${configPath}/apiserver-to-etcd-cert.pem \\
  --etcd-keyfile=${configPath}/apiserver-to-etcd-private-key.pem \\
  --etcd-quorum-read=true \\
  --etcd-servers=${etcdServers} \\
  --storage-backend=etcd3 \\
  --kubelet-certificate-authority=${configPath}/cluster-ca-cert.pem \\
  --kubelet-client-certificate=${configPath}/apiserver-to-kubelet-cert.pem \\
  --kubelet-client-key=${configPath}/apiserver-to-kubelet-private-key.pem \\
  --kubelet-preferred-address-types=InternalIP,Hostname,ExternalIP \\
  --service-account-key-file=${configPath}/service-account-public-key.pem \\
  --tls-ca-file=${configPath}/cluster-ca-cert.pem \\
  --tls-cert-file=${configPath}/client-to-apiserver-cert.pem \\
  --tls-private-key-file=${configPath}/client-to-apiserver-private-key.pem
